<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/salt"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:paddingRight="20dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/tv_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_18pt_bold"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/ll_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_style"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_below="@id/tv_settings_title"
            android:layout_marginTop="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_regular"
                android:paddingTop="15dp"
                android:text="@string/salary"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_salary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_bg"
                android:hint="@string/enter_your_salary"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/inter_18pt_regular"
                android:padding="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_regular"
                android:text="@string/desired_monthly_savings"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_desired_monthly_savings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_bg"
                android:fontFamily="@font/inter_18pt_regular"
                android:hint="@string/Enter_your_desired_monthly_savings"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_regular"
                android:text="@string/pay_date"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_pay_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_bg"
                android:fontFamily="@font/inter_18pt_regular"
                android:hint="@string/select_your_pay_date"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_regular"
                android:text="@string/current_month_fund"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_current_month_fund"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_bg"
                android:fontFamily="@font/inter_18pt_regular"
                android:hint="@string/enter_your_salary"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/apply"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_18pt_semibold"
                android:background="@drawable/box_style"
                android:backgroundTint="@color/beige"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/navigation_bar"
            android:orientation="horizontal"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/btn_settings"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/navigation_btn_bg"
                android:src="@drawable/settings_logo"
                android:scaleType="centerCrop"
                android:padding="7dp"
                app:tint="@color/brown" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn_main"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:contentDescription="@string/navigate_to_main"
                android:src="@drawable/budget_logo"
                android:scaleType="centerCrop"
                android:padding="5dp"
                app:tint="@color/beige" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/btn_transactions"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:contentDescription="@string/navigate_to_transaction"
                android:src="@drawable/transaction_logo"
                android:scaleType="centerCrop"
                android:padding="7dp"
                app:tint="@color/beige"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>