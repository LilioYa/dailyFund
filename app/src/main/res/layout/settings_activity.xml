<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:outlineProvider="paddedBounds"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/backMainButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_background"
        android:contentDescription="@string/left_arrow"
        android:onClick="goToMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow_icon" />

    <TextView
        android:id="@+id/tvParameterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_background"
        android:text="@string/parameter"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSalaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salary"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/salaryUserInput"
        app:layout_constraintEnd_toStartOf="@+id/salaryUserInput"
        app:layout_constraintTop_toTopOf="@+id/salaryUserInput"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/salaryUserInput"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:background="@color/darkBeige"
        android:textColorHint="@color/white"
        android:hint="5000.-"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvParameterTitle"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvDesiredSavingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desired_savings"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/desiredSavingsUserInput"
        app:layout_constraintEnd_toStartOf="@+id/desiredSavingsUserInput"
        app:layout_constraintTop_toTopOf="@+id/desiredSavingsUserInput"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/desiredSavingsUserInput"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:hint="1000.-"
        android:textSize="20sp"
        android:background="@color/darkBeige"
        android:textColorHint="@color/white"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/salaryUserInput"
        app:layout_constraintTop_toBottomOf="@+id/salaryUserInput"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvPaydayDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payday_date"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/paydayDateUserInput"
        app:layout_constraintEnd_toStartOf="@+id/paydayDateUserInput"
        app:layout_constraintTop_toTopOf="@+id/paydayDateUserInput"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/paydayDateUserInput"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:hint="@string/_24_of_the_month"
        android:autofillHints=""
        android:textSize="20sp"
        android:background="@color/darkBeige"
        android:textColorHint="@color/white"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/desiredSavingsUserInput"
        app:layout_constraintTop_toBottomOf="@+id/desiredSavingsUserInput" />

    <Button
        android:id="@+id/buttonApply"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/darkBeige"
        android:text="@string/apply"

        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>